# Life Tips Crawler - Environment Variables Template
# Copy this file to .env and customize the values

# Crawler Configuration
CRAWLER_CONCURRENCY=64
CRAWLER_USER_AGENT="LifeTipsCrawler/1.0 (+https://example.com/bot)"
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_POLITENESS_DELAY=1.0

# Database Configuration
DB_TYPE=sqlite
DB_SQLITE_PATH=./data/crawler.db
# For Redis (larger scale):
# DB_TYPE=redis
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Storage Configuration
STORAGE_DATA_DIR=./data
STORAGE_CACHE_DIR=./cache
STORAGE_LOGS_DIR=./logs
STORAGE_SHARDS_DIR=./output

# Export Configuration
EXPORT_SHARD_SIZE=10000
EXPORT_FORMAT=jsonl

# Monitoring Configuration
MONITORING_LOG_LEVEL=INFO
MONITORING_HEALTH_PORT=8080
MONITORING_PROMETHEUS_PORT=9090

# Performance Configuration
PERFORMANCE_TARGET_ENTRIES_PER_DAY=1500
PERFORMANCE_MAX_MEMORY=2GB

# Optional: Custom seed domains file
# DOMAINS_FILE=./domains.txt 